{:deps {:aliases [:nio :dev]}
 :builds
 {:web
  {:target :browser
   :module-loader true
   :modules {:app {:init-fn sparkboard.client.core/init}
             :org {:entries [sparkboard.entities.org] :depends-on #{:app}}
             :board {:entries [sparkboard.entities.board] :depends-on #{:app}}
             :member {:entries [sparkboard.entities.member] :depends-on #{:app}}
             :project {:entries [sparkboard.entities.project] :depends-on #{:app}}
             :slack {:entries [sparkboard.client.slack] :depends-on #{:app}}}
   :output-dir "resources/public/js/"
   :asset-path "/js"
   :devtools {:preloads [yawn.view.refresh-preload]
              :watch-dir "resources/public"}
   :dev {:build-hooks [(sparkboard.build/tailwind-dev!)]}
   :release {:build-hooks [(sparkboard.build/tailwind-release!)]}}}}

(comment
  (shadow/watch :web)
  (shadow/stop-worker :web)
  (shadow/release :web))
